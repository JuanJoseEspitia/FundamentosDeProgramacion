
            
            Console.Write("Ingrese una una frase: ");
            string frase = Console.ReadLine().ToUpper();
            string[] frase1 = frase.Split();
            Console.Write("Ingrese la palabra que quiere encontrar: ");
            string palabra = Console.ReadLine().ToUpper();
            int contador = 0;

            for(int i = 0; i<frase1.Length;i++)
            {
                
                if (frase1[i] == palabra)
                {
                    Console.WriteLine("Se encontró la palabra en la posición: " + (i+1));
                    contador++;
                }
                
            }
            Console.WriteLine("\nLa palabra se encuentra " + contador + " veces en la frase." );
            
            
            
            
